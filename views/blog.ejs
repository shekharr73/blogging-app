<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="Cover Image">
        <p><%= blog.body %></p>
        <div class="container">
            <img src="<%= blog.createdBy ? blog.createdBy.profileImageURL : '/images/default.png' %>" width="100px" style="border:1px solid blue; border-radius:10%;" alt="">
            <%= blog.createdBy ? blog.createdBy.fullName : 'Unknown User' %>
        </div>
        <div class="container mt-3">
            <h3>Comments:</h3>
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy ? comment.createdBy.profileImageURL : '/images/default.png' %>" width="40px" style="border:1px solid black;border-radius:50%;" alt="">
                    <%= comment.createdBy ? comment.createdBy.fullName : 'Unknown User' %>
                    <pre><%= comment.content %></pre>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
